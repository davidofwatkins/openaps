#! /bin/bash

name=$1

if [ -z $name ]; then name='.'; fi # default to current dir if no $name

(
test -n $name && cd $name
touch openaps.ini

if [ ! -d $name/.git ]; then
  git init
  git add openaps.ini
  git commit -avm "initializing $(openaps --version 2>&1)"
else # assume user is managing their own repo
  echo "Git repo already exists. Ignoring..."
fi
)
